{
    "name": "Apollo Revelation",
    "description": "An extension that detects malicious websites and fake news",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "js": ["jquery-3.5.1.min.js", "content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "cute-ghost.png"
    },
    "background": {
        "scripts": ["background.js"]
    }
}